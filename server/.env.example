# General
PORT=5000
NODE_ENV=development

# Database
MONGO_URI=your_mongodb_connection_string/dsa-hub

# Security (Rotate these keys regularly!)
# API_KEY is used for internal services, not for public frontend requests.
API_KEY=your_dsa_secret_key
# VITE_ADMIN_PASSWORD is required for the admin dashboard/GET endpoints.
VITE_ADMIN_PASSWORD=your_admin_password

# CORS - Comma separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com
